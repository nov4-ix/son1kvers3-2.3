{
    "manifest_version": 3,
    "name": "Suno Token Captor for The Generator",
    "version": "2.0.0",
    "description": "Automatically captures Suno JWT tokens",
    "permissions": [
        "storage",
        "tabs",
        "scripting"
    ],
    "host_permissions": [
        "https://suno.com/*",
        "https://*.suno.com/*"
    ],
    "content_scripts": [
        {
            "matches": [
                "https://suno.com/*",
                "https://*.suno.com/*"
            ],
            "js": [
                "content.js"
            ],
            "run_at": "document_idle"
        }
    ],
    "action": {
        "default_popup": "popup.html"
    }
}